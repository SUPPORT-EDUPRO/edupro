NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# EduSitePro Database Configuration (for registration sync)
NEXT_PUBLIC_EDUSITE_SUPABASE_URL=https://bppuzibjlxgfwrujzfsz.supabase.co
NEXT_PUBLIC_EDUSITE_SUPABASE_ANON_KEY=your-edusite-anon-key

# Base URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Daily.co Video/Voice Call Configuration (REQUIRED for video/voice calls and live lessons)
# Sign up at https://www.daily.co/ and get your API key from the Dashboard
DAILY_API_KEY=your-daily-api-key

# Feature Flags
# Toggle between Daily Prebuilt (new) and legacy custom Daily.co implementation
# true (default) = Use Daily Prebuilt with EduDash Pro branding
# false = Use legacy custom Daily.co implementation
NEXT_PUBLIC_USE_DAILY_PREBUILT=true

# PayFast Configuration (Server-side only - stored in Supabase Edge Function secrets)
# DO NOT use NEXT_PUBLIC_ prefix for these values
# Configure these in Supabase Dashboard → Edge Functions → Secrets:
# - PAYFAST_MERCHANT_ID
# - PAYFAST_MERCHANT_KEY  
# - PAYFAST_PASSPHRASE
# - PAYFAST_MODE (sandbox or production)
